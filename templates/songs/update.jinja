{% extends "base.jinja" %}

{% block content %}

<h1>{{ song.title }} ||| {{ song.album }} ||| {{ song.running_time }}</h1>

<form class="form-inline" action="/songs/{{ song.id }}/update" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="{{ song.title }}" required>
    <label for="album">Album</label>
    <input type="text" name="album" id="album" value="{{ song.album }}" required>
    <label for="running_time">Running Time</label>
    <input type="number" name="running_time" id="running_time" value="{{ song.running_time }}" required>
    <input class="btn_submit" type="submit" value="Update song">
</form>

{% endblock %}