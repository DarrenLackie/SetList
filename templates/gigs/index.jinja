{% extends "base.jinja" %}

{% block content %}

<form class="form-inline" action="/gigs" method="post">
    <label for="date">Date</label>
    <input type="date" name="date" id="date" required>
    <label for="city">City</label>
    <input type="text" name="city" id="city" required>
    <label for="venue">Venue</label>
    <input type="text" name="venue" id="venue" required>
    <label for="set_time">Set Time</label>
    <input type="number" name="set_time" id="set_time" required>
    <input class="btn_submit" type="submit" value="Add gig">
</form>

<h1><u>Gigs</u></h1>

<table class="gig-table">
  <tr>
    <th><u>Date</u></th>
    <th></th>
    <th><u>City</u></th>
    <th></th>
    <th><u>Venue</u></th>
    <th></th>
    <th><u>Set Time</u></th>
  </tr>
  {% for gig in gigs|sort(attribute='date') %}
  <tr>
    <td>{{gig.date}} </a></td>
    <td>|</td>
    <td>{{ gig.city }}</td>
    <td>|</td>
    <td>{{ gig.venue }}</td>
    <td>|</td>
    <td>{{ gig.set_time }}</td>
    <td>|</td>
    <td><a href="/gigs/{{ gig.id }}"><input class="btn_submit" type='submit' value="View Setlist"></a></td>
    <td>|</td>
    <td><a href="/gigs/{{ gig.id }}/update"><input class="btn_submit" type="submit" value="Update"/></a></td>
    <td>|</td>   
    <td><form class="form-delete-btn" action="/gigs/{{ gig.id }}/delete" method="POST"><input class="btn_delete" type="submit" value="Delete"/></form>
    </td>
  </tr>
  {% endfor %}
</table>
{% endblock %}